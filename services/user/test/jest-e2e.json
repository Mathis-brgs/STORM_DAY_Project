{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testMatch": ["**/test/**/*.e2e-spec.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.+)\\.js$": "$1",
    "^uuid$": "<rootDir>/__mocks__/uuid.js"
  },
  "transformIgnorePatterns": [
    "/node_modules/"
  ]
}
